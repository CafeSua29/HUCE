@model HUCE.Models.TaiKhoan

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Layouts/_LayoutLogin.cshtml";
}

<div class="main-wrapper login-body">
    <div class="login-wrapper">
        <div class="container">
            <div class="loginbox">
                <div class="login-left">
                </div>
                <div class="login-right">
                    <div class="login-right-wrap">
                        <h1>Login</h1>
                        <p class="account-subtitle">Access to our dashboard</p>
                        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <input name="TenTaiKhoan" class="form-control" type="text" placeholder="UserName" value="@Model.TenTaiKhoan">
                            </div>
                            <div class="form-group">
                                <input name="MatKhau" class="form-control" type="password" placeholder="Password" value="@Model.MatKhau">
                            </div>
                            <div class="form-group">
                                <span class="text-danger">@TempData["Error"]</span>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary btn-block" type="submit">Login</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

