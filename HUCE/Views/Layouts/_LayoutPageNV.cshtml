@{
    var username = HUCE.App_Start.SessionConfig.GetSession();
    var NVC = new HUCE.Controllers.NhanVienController();

    var user = NVC.GetNhanVien(username);
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="~/Assets/img/logo-dhxd.png">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,500;0,600;0,700;1,400&amp;display=swap">
    <link rel="stylesheet" href="~/Assets/plugins/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/Assets/plugins/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/Assets/plugins/datatables/datatables.min.css">
    <link rel="stylesheet" href="~/Assets/css/style.css">
</head>
<body>
    <div class="main-wrapper">
        <div class="header">
            <div class="header-left">
                <a href="~/NhanVien/Dashboard" class="logo">
                    <img src="https://media.huce.edu.vn/Media/2_SINHVIEN/FolderFunc/202304/Images/logodhxd-20230421024916-e.png" alt="Logo">
                </a>
                <a href="~/NhanVien/Dashboard" class="logo logo-small">
                    <img src="~/Assets/img/logo-dhxd.png" alt="Logo" width="30" height="30">
                </a>
            </div>
            <a href="javascript:void(0);" id="toggle_btn">
                <i class="fas fa-align-left"></i>
            </a>
            <a class="mobile_btn" id="mobile_btn">
                <i class="fas fa-bars"></i>
            </a>
            <ul class="nav user-menu">
                <li class="nav-item dropdown has-arrow">
                    <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                        <span class="user-img">
                            <img class="rounded-circle" src="~/Assets/img/profiles/@{ @user.MaNV }.jpg"
                                 width="31" alt="@user.TenNV">
                        </span>
                    </a>
                    <div class="dropdown-menu">
                        <div class="user-header">
                            <div class="avatar avatar-sm">
                                <img src="~/Assets/img/profiles/@{ @user.MaNV }.jpg" alt="User Image"
                                     class="avatar-img rounded-circle">
                            </div>
                            <div class="user-text">
                                <h6>@user.TenNV</h6>
                                <p class="text-muted mb-0">Nhan Vien</p>
                            </div>
                        </div>
                        <a class="dropdown-item" href="~/NhanVien/ChiTietNhanVien?manv=@user.MaNV">Thong Tin Ca Nhan</a>
                        <a class="dropdown-item" href="~/TaiKhoan/DoiMatKhau">Doi Mat Khau</a>
                        <a class="dropdown-item" href="~/TaiKhoan/DangXuat">Dang Xuat</a>
                    </div>
                </li>
            </ul>
        </div>
        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li class="menu-title">
                            <span>Main Menu</span>
                        </li>
                        <li class="submenu active">
                            <a href="#"><i class="fas fa-user-graduate"></i> <span>Quan Ly Khoa</span> <span class="menu-arrow"></span></a>
                            <ul>
                                <li><a href="~/Khoa/DanhSachKhoa">Danh Sach Khoa</a></li>
                                <li><a href="~/Khoa/ThemKhoa">Them Khoa</a></li>
                            </ul>
                        </li>
                        <li class="submenu active">
                            <a href="#"><i class="fas fa-user-graduate"></i> <span>Quan Ly Lop</span> <span class="menu-arrow"></span></a>
                            <ul>
                                <li><a href="~/Lop/DanhSachLop">Danh Sach Lop</a></li>
                                <li><a href="~/Lop/ThemLop">Them Lop</a></li>
                            </ul>
                        </li>
                        <li class="submenu active">
                            <a href="#"><i class="fas fa-user-graduate"></i> <span>Quan Ly Mon Hoc</span> <span class="menu-arrow"></span></a>
                            <ul>
                                <li><a href="~/MonHoc/DanhSachMonHoc">Danh Sach Mon Hoc</a></li>
                                <li><a href="~/MonHoc/ThemMonHoc">Them Mon Hoc</a></li>
                            </ul>
                        </li>
                        <li class="submenu active">
                            <a href="#"><i class="fas fa-user-graduate"></i> <span>Quan Ly Giang Vien</span> <span class="menu-arrow"></span></a>
                            <ul>
                                <li><a href="~/GiangVien/DanhSachGiangVien">Danh Sach Giang Vien</a></li>
                                <li><a href="~/GiangVien/ThemGiangVien">Them Giang Vien</a></li>
                            </ul>
                        </li>
                        <li class="submenu active">
                            <a href="#"><i class="fas fa-user-graduate"></i> <span>Quan Ly Sinh Vien</span> <span class="menu-arrow"></span></a>
                            <ul>
                                <li><a href="~/SinhVien/DanhSachSinhVien">Danh Sach Sinh Vien</a></li>
                                <li><a href="~/SinhVien/ThemSinhVien">Them Sinh Vien</a></li>
                            </ul>
                        </li>
                        <li class="submenu active">
                            <a href="#"><i class="fas fa-user-graduate"></i> <span>Quan Ly Chuong Trinh Khung</span> <span class="menu-arrow"></span></a>
                            <ul>
                                <li><a href="~/ChuongTrinhKhung/DanhSachChuongTrinhKhung">Danh Sach Chuong Trinh Khung</a></li>
                                <li><a href="~/ChuongTrinhKhung/ThemChuongTrinhKhung">Them Chuong Trinh Khung</a></li>
                            </ul>
                        </li>
                        <li class="submenu active">
                            <a href="#"><i class="fas fa-user-graduate"></i> <span>Quan Ly Thoi Khoa Bieu</span> <span class="menu-arrow"></span></a>
                            <ul>
                                <li><a href="~/ThoiKhoaBieu/LenLichDay">Len Lich Day</a></li>
                                <li><a href="~/ThoiKhoaBieu/LenLichHoc">Len Lich Hoc</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="~/HocBong/LapHocBong">Quan Ly Hoc Bong</a>
                        </li>
                        <li>
                            <a href="~/DiemRenLuyen/DanhSachDiemRenLuyen">Quan Ly Diem Ren Luyen</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="page-wrapper">
            <div>
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/Assets/js/jquery-3.6.0.min.js"></script>
    <script src="~/Assets/js/popper.min.js"></script>
    <script src="~/Assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/Assets/plugins/datatables/datatables.min.js"></script>
    <script src="~/Assets/js/script.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

