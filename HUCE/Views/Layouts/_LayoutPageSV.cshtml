@{
    var username = HUCE.App_Start.SessionConfig.GetSession();
    var SVC = new HUCE.Controllers.SinhVienController();

    var user = SVC.GetSinhVien(username);
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="~/Assets/img/logo-dhxd.png">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,500;0,600;0,700;1,400&amp;display=swap">
    <link rel="stylesheet" href="~/Assets/plugins/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/Assets/plugins/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/Assets/plugins/datatables/datatables.min.css">
    <link rel="stylesheet" href="~/Assets/css/style.css">
</head>
<body>
    <div class="main-wrapper">
        <div class="header">
            <div class="header-left">
                <a href="~/SinhVien/Dashboard" class="logo">
                    <img src="https://media.huce.edu.vn/Media/2_SINHVIEN/FolderFunc/202304/Images/logodhxd-20230421024916-e.png" alt="Logo">
                </a>
                <a href="~/SinhVien/Dashboard" class="logo logo-small">
                    <img src="~/Assets/img/logo-dhxd.png" alt="Logo" width="30" height="30">
                </a>
            </div>
            <a href="javascript:void(0);" id="toggle_btn">
                <i class="fas fa-align-left"></i>
            </a>
            <a class="mobile_btn" id="mobile_btn">
                <i class="fas fa-bars"></i>
            </a>
            <ul class="nav user-menu">
                <li class="nav-item dropdown has-arrow">
                    <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                        <span class="user-img">
                            <img class="rounded-circle" src="~/Assets/img/profiles/@{ @user.MaSV }.jpg"
                                 width="31" alt="@user.TenSV">
                        </span>
                    </a>
                    <div class="dropdown-menu">
                        <div class="user-header">
                            <div class="avatar avatar-sm">
                                <img src="~/Assets/img/profiles/@{ @user.MaSV }.jpg" alt="User Image"
                                     class="avatar-img rounded-circle">
                            </div>
                            <div class="user-text">
                                <h6>@user.TenSV</h6>
                                <p class="text-muted mb-0">Sinh Vien</p>
                            </div>
                        </div>
                        <a class="dropdown-item" href="~/SinhVien/ChiTietSinhVien?MaSV=@user.MaSV">Thong Tin Ca Nhan</a>
                        <a class="dropdown-item" href="~/TaiKhoan/DoiMatKhau">Doi Mat Khau</a>
                        <a class="dropdown-item" href="~/TaiKhoan/DangXuat">Dang Xuat</a>
                    </div>
                </li>
            </ul>
        </div>
        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li class="menu-title">
                            <span>Main Menu</span>
                        </li>
                        <li><a href="#">Lich Hoc</a></li>
                        <li><a href="#">Ket Qua Hoc Tap</a></li>
                        <li><a href="#">Danh Gia Diem Ren Luyen</a></li>
                        <li class="submenu active">
                            <a href="#"><i class="fas fa-user-graduate"></i> <span>Dang Ky Lich Hoc</span> <span class="menu-arrow"></span></a>
                            <ul>
                                <li><a href="#">Chuong Trinh Khung</a></li>
                                <li><a href="#">Dang Ky Lich Hoc</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="page-wrapper">
            <div>
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/Assets/js/jquery-3.6.0.min.js"></script>
    <script src="~/Assets/js/popper.min.js"></script>
    <script src="~/Assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/Assets/plugins/datatables/datatables.min.js"></script>
    <script src="~/Assets/js/script.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
